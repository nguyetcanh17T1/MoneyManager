<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="#30dfb7"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:text="MONEY MANAGER"/>

    <ImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/imageView"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_launcher"/>

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="-33dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:ems="50"
        android:hint="Nhập mã PIN"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <Button
        android:background="#14efe4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/etLogin"
        android:text="Đăng nhập"
        android:layout_alignStart="@+id/etLogin"
        android:layout_alignEnd="@+id/etLogin"
        android:textColor="#075b57"/>

    <Button
        android:background="#075b57"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnReset"
        android:layout_below="@+id/btnLogin"
        android:text="Thay PIN"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:textColor="#14efe4"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnReset"
        android:text="*PIN mặc định là: 1234"
        android:layout_alignStart="@+id/btnReset"/>

</RelativeLayout>